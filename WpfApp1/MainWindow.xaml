<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Map Editor" Height="500" Width="500">
	<Grid Margin="0,0,0,193">
		<DockPanel>
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="_File">
					<MenuItem Header="_New Map"/>
					<MenuItem Header="_Open Map"/>
					<MenuItem Header="_Save Map"/>
				</MenuItem>
			</Menu>
			<Canvas Background="DarkGray" HorizontalAlignment="Left" Height="479" Margin="248,19,0,-161" VerticalAlignment="Top" Width="424">
				<TextBlock FontSize="20" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Width="194" Canvas.Left="10" Canvas.Top="10">
					<Run Text="Grid editor"/>
					<LineBreak/>
					<Run/>
				</TextBlock>
				<Canvas Height="400" HorizontalAlignment="Left" Name="canvas1" VerticalAlignment="Top" Width="400" Canvas.Left="10" Canvas.Top="39" />
			</Canvas>
		</DockPanel>
		<StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
			<Header>TileSets</Header>
		</StackPanel>
		<StackPanel Grid.Row="4" Grid.Column="6">
			<Header>Assets</Header>
		</StackPanel>
	</Grid>
</Window>
